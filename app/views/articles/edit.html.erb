<h1> Edit existing article</h1>

<% if @article.errors.any? %>
<h2>Errors!</h2>
  <ul>
    <!-- using @article means we need to send it in!! -->
    <!-- this is done in the articles_controlelr edit funciton -->
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<!-- Can mamnage forms easy with ruby "forms for" -->
<%= form_for @article do |fff| %>
  <p>
    <%= fff.label :title %> <br>
    <%= fff.text_field :title %>
  </p>
  
  <p>
    <%= fff.label :description %> <br>
    <%= fff.text_area :description %>
  </p>
  
  <p>
    <%= fff.submit %>
  </p>

<% end %>

<%= link_to "Back to Listing", articles_path %>